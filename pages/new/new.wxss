.edit-box {
  padding: calc(20px + env(safe-area-inset-top)) calc(16px + env(safe-area-inset-right)) 12px calc(16px + env(safe-area-inset-left));
  margin-bottom: 10px;
}

.edit-box .info {
  font-size: 15px;
  color: rgba(0,0,0,0.3);
  display: block;
}

@media (prefers-color-scheme: dark) {
  .edit-box .info {
    color: rgba(255, 255, 255, 0.3);
  }
}

.setting-box {
  width: 100%;
  /* position: absolute; */
  /* bottom: 0; */
  display: flex;
  flex-direction: column;
  color: #333;
}

@media (prefers-color-scheme: dark) {
  .setting-box {
    color: #ddd;
  }
}

.setting-box .switches .switch-box {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 15px;
}

.button-box {
  position: absolute;
  bottom: 20px;
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
}

.button-box button {
  margin-bottom: 20px;
}