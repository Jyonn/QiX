.main {
  box-sizing: border-box;
  overflow-y: scroll;
  background: none;
  width: 100%;
  height: 100%;
}

.main .new-article {
  display: block;
  text-align: right;
  color: #576b95;
  font-size: 14px;
  margin-bottom: 15px;
}

@media (prefers-color-scheme: dark) {
  .main .new-article {
    color: #7f90a5;
  }
}

.main .articles .article-box {
  box-sizing: border-box;
  width: 100%;
  background: white;
  padding: 20px;
  border-radius: 5px;
  margin-bottom: 15px;
}

@media (prefers-color-scheme: dark) {
  .main .articles .article-box {
    background: #222;
  }
}

.main .articles .article-box .item {
  font-size: 14px;
  color: rgba(0,0,0,0.3);
  margin: 0 10px 10px 0;
}

@media (prefers-color-scheme: dark) {
  .main .articles .article-box .item {
    color: rgba(255,255,255,0.3);
  }
}

.main .articles .article-box .self-producted {
  background: #f2f2f2;
  padding: 2px 4px;
  font-size: 12px;
  line-height: 1.67;
  vertical-align: middle;
  border-radius: 2px;
}

@media (prefers-color-scheme: dark) {
  .main .articles .article-box .self-producted {
    background: #333;
  }
}

.main .articles .article-box .title {
  font-size: 18px;
  font-weight: bold;
  display: block;
  margin-bottom: 5px;
  color: #333;
}

@media (prefers-color-scheme: dark) {
  .main .articles .article-box .title {
    color: #ddd;
  }
}

.main .articles .article-box .origin {
  color: #576b95;
}

@media (prefers-color-scheme: dark) {
  .main .articles .article-box .origin {
    color: #7f90a5;
  }
}

.main .article-box .line {
  border-top: 1px solid rgba(0,0,0,0.05);
  margin: 15px 0 12px ;
}

@media (prefers-color-scheme: dark) {
  .main .article-box .line {
    border-top: 1px solid rgba(255,255,255,0.05);
  }
}

.main .articles .article-box .btn-box {
  text-align: right;
}

.main .articles .article-box .btn-box .btn {
  margin-left: 20px;
  font-size: 13px;
  color: rgba(0,0,0,0.5);
}

@media (prefers-color-scheme: dark) {
  .main .articles .article-box .btn-box .btn {
    color: rgba(255,255,255,0.5)
  }
}

.main .articles .article-box .btn-box .btn:before {
  margin-right: 2px;
}

.center {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.center text {
  font-size: 15px;
  color: rgba(0,0,0,0.3);
  margin-bottom: 15px;
}

@media (prefers-color-scheme: dark) {
  .center text {
    color: rgba(255,255,255,0.3);
  }
}